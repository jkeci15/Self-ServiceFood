<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/sign_up_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="20sp"
        android:hint="@string/ent_user"
        android:padding="5dp"
        android:singleLine="true"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="195dp" />

    <EditText
        android:id="@+id/sign_up_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/ent_pass"
        android:text=""
        android:textSize="20sp"
        android:inputType="textPassword"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:singleLine="true"
        android:layout_alignBottom="@+id/confirm"
        android:layout_alignLeft="@+id/sign_up_username"
        android:layout_alignStart="@+id/sign_up_username"
        android:layout_marginBottom="58dp" />

    <EditText
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:hint="@string/confirm_pass"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/sign_up_username"
        android:layout_alignLeft="@+id/sign_up_password"
        android:layout_alignStart="@+id/sign_up_password"
        android:layout_marginTop="79dp" />

    <Button
        android:id="@+id/OkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:text="Confirm"
        android:textSize="20sp"
        android:layout_below="@+id/sign_up_password"
        android:layout_centerHorizontal="true" />

    <QuickContactBadge
        android:visibility="visible"

        android:id="@+id/quickContactBadge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:background="@android:drawable/sym_def_app_icon"/>


</RelativeLayout>