<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/coffee"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/sign_up_email"
        android:textColorHint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="90dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/ent_email"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/sign_up_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/ent_pass"
        android:text=""
        android:textSize="20sp"
        android:inputType="textPassword"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:singleLine="true"
        android:layout_alignBottom="@+id/confirm"
        android:layout_alignLeft="@+id/sign_up_email"
        android:layout_alignStart="@+id/sign_up_email"
        android:layout_marginBottom="58dp"
        android:textColorHint="@color/white"/>

    <EditText
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:hint="@string/conf_pass"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/sign_up_email"
        android:layout_alignLeft="@+id/sign_up_password"
        android:layout_alignStart="@+id/sign_up_password"
        android:layout_marginTop="79dp"
        android:textColorHint="@color/white"/>

    <Button
        android:id="@+id/OkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_password"
        android:layout_marginTop="20dp"
        android:text="Confirm"
        android:layout_marginLeft="150dp"
        android:textSize="20sp" />



</RelativeLayout>